<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/unit"
        android:layout_width="188dp"
        android:layout_height="125dp"
        android:layout_marginTop="64dp"
        android:entries="@array/Unit_Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/unit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonMeter"
        android:layout_width="126dp"
        android:layout_height="131dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="524dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img4" />

    <EditText
        android:id="@+id/ouputMonitor"
        android:layout_width="102dp"
        android:layout_height="189dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="212dp"
        android:ems="10"

        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/outputUnit"
        android:layout_width="102dp"
        android:layout_height="189dp"
        android:layout_marginTop="212dp"
        android:ems="10"

        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="#CC1414"
        app:layout_constraintStart_toEndOf="@+id/ouputMonitor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonTem"
        android:layout_width="126dp"
        android:layout_height="131dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="524dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/buttonMeter"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img2" />

    <ImageButton
        android:id="@+id/buttonKg"
        android:layout_width="126dp"
        android:layout_height="131dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="524dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/buttonTem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/img" />

</androidx.constraintlayout.widget.ConstraintLayout>